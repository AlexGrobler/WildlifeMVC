@model WildlifeMVC.Models.Species

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Header = "Edit Species Entry";
    ViewBag.Description = "Edit the details for this entry";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)


<div class="container">
    <hr />
    <div class="mb-3">
        @Html.LabelFor(model => model.EnglishName, htmlAttributes: new { @class = "form-label" })
        @Html.EditorFor(model => model.EnglishName, new { htmlAttributes = new { @class = "form-control", required = "required", maxlength = "255", pattern = "[a-zA-Z ]*", title = "Only letters are allowed." } })
        @Html.ValidationMessageFor(model => model.EnglishName, "", new { @class = "form-text" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.LatinName, htmlAttributes: new { @class = "form-label" })
        @Html.EditorFor(model => model.LatinName, new { htmlAttributes = new { @class = "form-control", required = "required", maxlength = "255", pattern = "[a-zA-Z ]*", title = "Only letters are allowed." } })
        @Html.ValidationMessageFor(model => model.LatinName, "", new { @class = "form-text" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.ShortDescription, htmlAttributes: new { @class = "form-label" })
        @Html.EditorFor(model => model.ShortDescription, new { htmlAttributes = new { @class = "form-control" }, required = "required", maxlength = "500" })
        @Html.ValidationMessageFor(model => model.ShortDescription, "", new { @class = "form-text" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.LongDescription, htmlAttributes: new { @class = "form-label" })
        @Html.EditorFor(model => model.LongDescription, new { htmlAttributes = new { @class = "form-control" }, required = "required", maxlength = "5000" })
        @Html.ValidationMessageFor(model => model.LongDescription, "", new { @class = "form-text" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.ImageURL, htmlAttributes: new { @class = "form-label" })
        @Html.EditorFor(model => model.ImageURL, new { htmlAttributes = new { @class = "form-control", required = "required", maxlength = "1000" } })
        @Html.ValidationMessageFor(model => model.ImageURL, "", new { @class = "form-text" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.VideoURL, htmlAttributes: new { @class = "form-label" })
        @Html.EditorFor(model => model.VideoURL, new { htmlAttributes = new { @class = "form-control", required = "required", maxlength = "1000" } })
        @Html.ValidationMessageFor(model => model.VideoURL, "", new { @class = "form-text" })
    </div>
   
    <div class="mt-3">
        <button type="submit" value="Save" class="btn btn-primary">Save</button> |
        <a class="link-primary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" href="@Url.Action("Index")">Back to List</a>
    </div>
</div>
}

