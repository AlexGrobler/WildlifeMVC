@model WildlifeMVC.Models.Species

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Header = "Species Info";
    ViewBag.Description = "Information about the species";
}

<div class="container">
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.EnglishName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EnglishName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LatinName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LatinName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ShortDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ShortDescription)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LongDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LongDescription)
        </dd>
    </dl>
    <div style="max-width: 100%; height: auto; width: 800px">
        <img class="img-fluid" src="@Url.Content(Model.ImageURL ?? "~/Content/fox.jpg")" alt="Image">
    </div>
    <div class="ratio ratio-16x9">
        <iframe src="@Model.VideoURL" title="YouTube Video" allowfullscreen></iframe>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { name = Model.EnglishName.Replace(" ", "-"), id = Model.ID }) |
        @Html.ActionLink("Back to List", "Index")
    </p>

</div>
