@model WildlifeMVC.Models.Species

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Species</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.EnglishName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EnglishName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LatinName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LatinName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ShortDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ShortDescription)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LongDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LongDescription)
        </dd>
    </dl>
    <div>
        <img src="@Url.Content(Model.ImageURL ?? "~/Content/fox.jpg")" alt="Image">
    </div>
    <div>
        <iframe width="2543" height="1118" src="@Model.VideoURL" title="The Red Fox - The British Mammal Guide" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
    
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { name = HttpUtility.UrlEncode(Model.EnglishName), id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
